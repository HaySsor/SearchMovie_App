{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "airbnb-base"],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"linebreak-style": 0,
		"semi": 0,
		"quotes": [
			2,
			"single",
			{ "avoidEscape": true },
			{ "allowTemplateLiterals": true }
		]
	}
}
